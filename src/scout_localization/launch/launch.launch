<launch>
  <!-- Parameter 설정 로드 -->
  <param name="use_sim_time" value="false" />
  <rosparam file="$(find scout_localization)/config/config.yaml" command="load" />

  <!-- navsat_transform_node 실행 -->
  <node pkg="robot_localization" type="navsat_transform_node" name="navsat_transform" output="screen">
    <!-- GPS 데이터 -->
    <remap from="/gps/fix" to="/fix" />
    
    <!-- IMU 데이터 -->
    <remap from="/imu/data" to="/vectornav/IMU" />

    <!-- odometry 데이터 -->
    <remap from="/odometry/filtered" to="/odom" />
  </node>

</launch>
